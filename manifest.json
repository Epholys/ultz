{
  "required_api_version": "^2.0.0",
  "name": "Timezones",
  "description": "Convert time from any timezones",
  "developer_name": "Epholys",
  "icon": "images/icon.png",
  "preferences": [
    {
      "id": "tzkw",
      "type": "keyword",
      "name": "Timezone",
      "description": "Keyword to launch the extension",
      "default_value": "tz"
    },
    {
	"id": "date-format",
	"type": "select",
	"name": "Date format",
	"description": "Format for the date",
	"options": [
	    {
		"value": "ISO",
	        "text": "ISO format: [YYYY-]MM-DD"
	    },
	    {
		"value": "ALT",
	        "text": "Alternative format: DD-MM[-YYYY]"
	    }
	],
	"default_value": "ISO"
    }
  ]
}
